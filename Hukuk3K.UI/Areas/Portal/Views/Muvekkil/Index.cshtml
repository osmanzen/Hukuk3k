@model VMProfilDuzenle
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Portal/Views/Shared/_PortalLayout.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            @if (TempData["mesaj"] != null)
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    @TempData["mesaj"].ToString()
                </div>
            }
            @if (TempData["basarili"] != null)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    @TempData["basarili"].ToString()
                </div>
            }
            <div class="header">
                <h2>
                    Profilim
                </h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Index", "Muvekkil", FormMethod.Post, new { id = "muvekkilDuzenle" }))
                {
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="email_address">TC Kimlik Numarası</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="TCKimlikNo" value="@Session["portal"].ToString()" class="form-control" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="password">Adı Soyadı</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", minlength = 5, required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <label for="email_address">Şifre</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", type = "password", minlength = 5, required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="password">Şifre Tekrar</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.SifreTekrar, new { @class = "form-control", type = "password", minlength = 5, required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <label for="email_address">Telefon Numarası</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.Tel, new { @class = "form-control", type = "tel", required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="password">E-Posta Adresi</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", minlength = 5, required = "required", type = "email" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <label for="email_address">Adres</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control", required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <br>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect"><i class="material-icons">loop</i> Güncelle</button>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Assets/BSB/js/muvekkil/edit.js"></script>
}
